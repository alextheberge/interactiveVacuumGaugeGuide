source "https://rubygems.org"

# Specifies the Jekyll version.
# GitHub Pages has its own supported version, but this helps for local development.
# You can check GitHub Pages dependency versions here:
# https://pages.github.com/versions/
gem "jekyll", "~> 3.9" # Using a commonly supported version for GitHub Pages

# Specifies the theme. Ensure it's compatible with GitHub Pages.
# 'jekyll-theme-minimal' is a GitHub Pages default theme.
gem "jekyll-theme-minimal"

